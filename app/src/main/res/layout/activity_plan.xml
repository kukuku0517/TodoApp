<?xml version="1.0" encoding="utf-8"?>
<layout>
<data>
    <variable
        name="vm"
        type="com.example.lazytodoapp.plan.PlanViewModel" />
</data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".plan.PlanActivity">

        <TextView
            android:id="@+id/mTvPlanTitleTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="제목" />

        <EditText
            android:id="@+id/mEtPlanTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@={vm.plan.title}"
            android:hint="제목을 입력하세요"

            />

        <TextView
            android:id="@+id/mTvPlanDescriptionTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="내용"

            />

        <EditText
            android:id="@+id/mEtPlanDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"

            android:text="@={vm.plan.description}"
            android:hint="내용을 입력하세요" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="기한"

            />

        <TextView
            android:id="@+id/mTvPlanDueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:onDateChange="@{vm.plan.dueDate}"
            tools:text="12/31"/>

        <TextView
            android:id="@+id/mTvPlanMandatoryTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_margin="16dp"
            android:text="얼마나 중요한가요?" />

        <TextView
            android:id="@+id/mTvPlanMandatory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@{vm.plan.mandatory}" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:selectedValue="@={vm.plan.mandatory}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="반복" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="@={vm.plan.repeat.everyNDay}"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일마다" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textStyle="@{vm.plan.isDayOfWeek(0)?`bold`:`normal`}"
                android:onClick="@{()->vm.setDayOfWeek(0)}"
                android:text="월" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textStyle="@{vm.plan.isDayOfWeek(1)?`bold`:`normal`}"
                android:onClick="@{()->vm.setDayOfWeek(1)}"

                android:text="화" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textStyle="@{vm.plan.isDayOfWeek(2)?`bold`:`normal`}"
                android:onClick="@{()->vm.setDayOfWeek(2)}"

                android:text="수" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textStyle="@{vm.plan.isDayOfWeek(3)?`bold`:`normal`}"
                android:onClick="@{()->vm.setDayOfWeek(3)}"

                android:text="목" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textStyle="@{vm.plan.isDayOfWeek(4)?`bold`:`normal`}"
                android:onClick="@{()->vm.setDayOfWeek(4)}"

                android:text="금" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textStyle="@{vm.plan.isDayOfWeek(5)?`bold`:`normal`}"
                android:onClick="@{()->vm.setDayOfWeek(5)}"


                android:text="토" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textStyle="@{vm.plan.isDayOfWeek(6)?`bold`:`normal`}"
                android:onClick="@{()->vm.setDayOfWeek(6)}"

                android:text="일" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{()->vm.onSubmit()}"
            android:text="완료"/>

    </LinearLayout>
</layout>
