<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="PlanSection">
        <item name="android:textSize">@dimen/plan_section</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>



    <style name="PlanTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/plan_title</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:useDefaultMargins">false</item>
    </style>

    <style name="PlanEditText" parent="AppTheme">

        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColorHint">@color/white</item>

        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/background_round_corner_edittext</item>
    </style>

    <style name="PlanCaption">
        <item name="android:textSize">@dimen/plan_caption</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:useDefaultMargins">false</item>
    </style>


</resources>
